body{
	position: absolute;
	margin: 0px;
	width: 100%;
	height: 100%;
	background-image: url(geminiwars_site_background_by_krzyzowiec-d3ivlzb.jpg);
	background-attachment: fixed;
	background-size: cover;
}

/*HEADER*/

h1{
	margin: 0;
	font-family: Arial,sans-serif;
	color: gray;
}

#header{
	width: 100%;
	height: 110px;
	text-align: center;
	color: white;
	background-color: black;
}

#co{
	/*Taille / Style*/
	width: 150px;
    height: 35px;
	margin: 0;
	margin-right: 15px;
    padding-top: 7px;
    border-radius: 8px;
    display: block;

	/*Caractere style*/
	font-family: Arial,sans-serif;
    font-size: 1.2em;
    text-align: center;
    color: #000;
    background: #444;
    text-shadow: 0px 1px 0px rgba( 255, 255, 255, 0.2);
    
   
    background: linear-gradient( #555, #2C2C2C);
    box-shadow: 0 0 5px rgba( 0, 0, 0, 0.5),
                0 -1px 0 rgba( 255, 255, 255, 0.4);
}

#co:hover{
     color: #222;
     background: #555;
     background: linear-gradient( #777, #333);
}

#co:active{
     color: #000;
     background: #444;
     background: linear-gradient( #555, #2C2C2C);
     box-shadow: 1px 1px 10px black inset, 
                 0 1px 0 rgba( 255, 255, 255, 0.4);
}

